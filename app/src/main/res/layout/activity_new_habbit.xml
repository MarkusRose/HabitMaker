<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".NewHabitActivity">

    <EditText
        android:id="@+id/newHabitNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints="@string/nameNewHabit"
        android:ems="10"
        android:hint="@string/nameNewHabit"
        android:inputType="textPersonName|textCapSentences|textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/commitNewHabitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commitButton"
        app:layout_constraintEnd_toEndOf="@+id/newHabitNameText"
        app:layout_constraintTop_toBottomOf="@+id/newHabitNameText" />
</androidx.constraintlayout.widget.ConstraintLayout>